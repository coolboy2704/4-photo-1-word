                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/tv_win_six"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:background="@drawable/answer_corner_background">

            <TextView
                android:id="@+id/tv_tv_win_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/tv_win_seven"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:background="@drawable/answer_corner_background">

            <TextView
                android:id="@+id/tv_tv_win_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/tv_win_eight"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:background="@drawable/answer_corner_background">

            <TextView
                android:id="@+id/tv_tv_win_eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/bt_contiune"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@drawable/bt_contiune"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="43dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dalshe"
        android:textStyle="bold"
        android:textSize="27sp"
        app:layout_constraintTop_toTopOf="@id/bt_contiune"
        app:layout_constraintBottom_toBottomOf="@id/bt_contiune"
        app:layout_constraintEnd_toEndOf="@id/bt_contiune"
        app:layout_constraintStart_toStartOf="@id/bt_contiune" />

</androidx.constraintlayout.widget.ConstraintLayout>
